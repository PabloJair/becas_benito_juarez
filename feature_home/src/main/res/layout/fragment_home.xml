                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"

                    />

                <com.s10plus.core_application.ui.ButtonGreenBecas
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"

                    />

                <com.s10plus.core_application.ui.ButtonGreenBecas
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"

                    />
