<resources>
    <style name="AppTheme"      parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#001C1C</item>
        <item name="colorSecondary">#001C1C</item>
        <item name="colorAccent">#001C1C</item>

        <item name="colorPrimaryDark">#001C1C</item>

        <item name="colorSecondaryVariant">#001C1C</item>
    </style>






    <style name="s10plus_dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>



    </style>

    <style name="s10plus_dialog_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>


    </style>


    <style name="s10plusTheme.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>





</resources>
